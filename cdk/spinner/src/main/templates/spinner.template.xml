<?xml version="1.0" encoding="UTF-8"?>
<cdk:root xmlns="http://jboss.org/schema/richfaces/cdk/xhtml-el"
	xmlns:cdk="http://jboss.org/schema/richfaces/cdk/core" xmlns:cc="http://jboss.org/schema/richfaces/cdk/jsf/composite"
	xmlns:c="http://jboss.org/schema/richfaces/cdk/jstl/core" xmlns:xi="http://www.w3.org/2001/XInclude">
	<cc:interface>
		<cdk:class>org.practicalrf.renderkit.SpinnerRenderer</cdk:class>
		<cdk:superclass>org.practicalrf.renderkit.SpinnerBaseRenderer
		</cdk:superclass>
		<cdk:component-family>javax.faces.Input</cdk:component-family>
		<cdk:renderer-type>org.practicalrf.renderkit.SpinnerRenderer
		</cdk:renderer-type>
	</cc:interface>
	<cc:implementation>
		<span id="#{clientId}">
			<input type="text" name="#{clientId}" id="#{clientId}Input" 
				class="rf-insp-inp #{component.attributes['inputClass']}" value="#{getInputValue(facesContext, component)}" />
			<button type="button" id="#{clientId}Dec">&lt;</button>
			<button type="button" id="#{clientId}Inc">&gt;</button>
			<script>
				<cdk:scriptObject name="options">
					<cdk:scriptOption attributes="id step maxValue minValue"/>
					<cdk:scriptOption name="value" value="#{component.attributes['value']}" defaultValue="0"/>
				</cdk:scriptObject>
				new $.fn.Spinner('#{clientId}', #{toScriptArgs(options)});
			</script> 
		</span>
	</cc:implementation>
</cdk:root>
